// Write a program to printf the position of the largest number of n elements using arrrays.

#include <stdio.h>
int main() 
{
    int n, i;
    int largestPosition = 0; 
    
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    
    if (n <= 0) 
    {
        printf("Number of elements should be more than 0.\n");
        return 1; 
    }
    
    int arr[n]; 
    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) 
    {
        scanf("%d", &arr[i]);
    }
    
    int largest = arr[0];
    
    for(i = 1; i < n; i++) 
    {
        if(arr[i] > largest) 
        {
            largest = arr[i];
            largestPosition = i;
        }
    }
    printf("The largest number is %d and its position is %d.\n", largest, largestPosition + 1);
    
    return 0;
}
